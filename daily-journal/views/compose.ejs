<%- include("partials/header") %>

<% if(warning===true){ %>
    <div class="alert alert-warning" role="alert">
        Please enter all fields to proceed!
    </div>
<%}%>

<h1>Compose</h1>
<form action="/compose" method="post">

    <div class="mb-3 form-group">
        <label for="postTitle" class="form-label">Title</label>
        <input class="form-control" type="text" name="postTitle" autocomplete="off" required>

        <label for="postBody" class="form-label">Post</label>
        <textarea name="postBody" class="form-control" id="" cols="60" rows="10"></textarea>
    </div>
    
    <button class="btn btn-primary compose-btn" type="submit" name="submit">Publish</button>
    
</form>

<%- include("partials/footer") %>
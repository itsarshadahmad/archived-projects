<%- include("header") -%>

    <div class="box">
        <h1 id="heading"> <%= listTitle %> </h1>
    </div>

    <div class="box">

        <% todoValue.forEach(element => { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= element._id %>" onChange="this.form.submit()">
                    <p> <%= element.name %> </p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>">
            </form>
        <% }); %>
        

        <form class="item" action="/" method="post">
            <input type="text" name="todoInput" id="todoInput" placeholder="Add New Item" autocomplete="off">
            <button name="submit" type="submit" id="submit" value=<%= listTitle %>>+</button>
        </form>
    </div>

<%- include("footer") -%> 